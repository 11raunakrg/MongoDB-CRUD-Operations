<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="bg-black p-2">
      <a href="/" class="text-xl text-blue-500 tracking-tighter"
        >Back to Home</a
      >
    </div>
    <div class="w-full h-full bg-zinc-800 text-white p-10">
      <h1 class="text-2xl font-semibold tracking-tight">All Users</h1>
      <% if(users.length == 0) { %>
      <h1 class="text-2xl font-bold tracking-tight mt-10">No Users Yet...</h1>
      <% }%>
      <div class="users flex flex-wrap gap-3">
        <% users.forEach((user) => { %>
        <div class="user w-72 p-10 bg-zinc-700 mt-2 rounded-lg">
          <div class="img bg-zinc-600 h-52 rounded-lg w-full overflow-hidden">
            <img
              src="<%= user.image %>"
              alt="User Image"
              class="h-full w-full object-cover rounded-lg"
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-400"><%= user.email %></h5>

          <div class="mt-5 flex gap-5">
            <a href="/edit/<%= user._id %>" class="text-zinc-300 font-semibold"
              >Edit User</a
            >
            <a
              href="/delete/<%= user._id %> "
              class="text-red-500 font-semibold"
              >Delete User</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
